{
    "extends": "@workspace/typescript-config/nextjs.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./*"],
            "@workspace/ui/*": ["../../packages/ui/src/*"],
            "@workspace/database/*": ["../../packages/database/src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "next.config.ts",
        "./build/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
